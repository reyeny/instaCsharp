@model LabWork_59_Nyssanov_Yernar.ViewModel.Post.CreatePostViewModel

@{
    ViewBag.Title = "создать пост";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="text-center">Создание поста</h2>
        <form method="post" class="was-validated" asp-action="CreatePost"enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" id="Name" required/>
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="productImage">Ваша Ава:</label>
                <input asp-for="PostCover" class="form-control" id="productImage" type="file" required/>
                <span asp-validation-for="@Model.PostCover" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-success mt-3">Создать</button>
        </form>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}