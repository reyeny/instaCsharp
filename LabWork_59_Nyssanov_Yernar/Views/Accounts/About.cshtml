                    <a asp-action="FillInfoPost" asp-route-id="@post.Id">
                        <img src="@post.ImagePath">
                    </a>
                </div>
                <div class="icons">
                    <i class="fa fa-heart">@post.Likes.Count ‚ù§</i>
                    <i class="fa fa-comment">@post.Comments.Count üó®Ô∏è</i>
